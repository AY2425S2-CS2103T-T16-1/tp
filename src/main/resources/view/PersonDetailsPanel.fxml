<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<ScrollPane style="-fx-border-color: white; -fx-padding: 5 5 5 5" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
    <content>
        <VBox>
            <Label fx:id="nameLabel" styleClass="person-header-label" wrapText="true" />
            <VBox spacing="8" VBox.vgrow="NEVER">
                <HBox spacing="5">
                    <Label text="Telegram:" styleClass="detail-label-bold" minWidth="65"/>
                    <Label fx:id="telegramLabel" styleClass="detail-label" wrapText="true" />
                </HBox>
                <HBox spacing="5">
                    <Label text="Phone:" styleClass="detail-label-bold" />
                    <Label fx:id="phoneLabel" styleClass="detail-label" wrapText="true" />
                </HBox>
                <HBox spacing="5">
                    <Label text="Email:" styleClass="detail-label-bold" minWidth="45"/>
                    <Label fx:id="emailLabel" styleClass="detail-label" wrapText="true" />
                </HBox>
                <HBox spacing="5">
                    <Label text="Alias:" styleClass="detail-label-bold" minWidth="45"/>
                    <Label fx:id="aliasLabel" styleClass="detail-label" wrapText="true" />
                </HBox>
                <HBox spacing="5">
                    <Label text="Major:" styleClass="detail-label-bold" minWidth="45"/>
                    <Label fx:id="majorLabel" styleClass="detail-label" wrapText="true" />
                </HBox>
                <HBox spacing="5">
                    <Label text="Note:" styleClass="detail-label-bold" minWidth="35"/>
                    <Label fx:id="noteLabel" styleClass="detail-label" wrapText="true" />
                </HBox>
                <HBox spacing="5">
                    <Label text="Website:" styleClass="detail-label-bold" minWidth="55"/>
                    <Label fx:id="websiteLabel" styleClass="detail-label" wrapText="true" />
                </HBox>
            </VBox>
        </VBox>
    </content>
</ScrollPane>
